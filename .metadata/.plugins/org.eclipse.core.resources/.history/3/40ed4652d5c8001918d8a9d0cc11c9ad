#include <avr/io.h>
#include <avr/interrupt.h>
#include  <util/delay.h>

#define F_CPU 1000000

void Timer1_init(unsigned char);

int main(void){
	Timer1_init(124);
	while(1){

		_delay_ms(1000);
		Timer1_init(124);
		_delay_ms(1000);
		Timer1_init(187);
		_delay_ms(1000);
		Timer1_init(250);
	}
	return 0;
}

void Timer1_init(unsigned char i){
	TCCR1A |=(1<<COM1A1) | (1<<WGM11);
	TCCR1B |=(1<<WGM12) | (1<<WGM13) | (1<<CS11);
	TCNT1=0;
	ICR1=2499;
	OCR1A=i;
	SREG |=(1<<7);
	DDRD |=(1<<PD5);
}

