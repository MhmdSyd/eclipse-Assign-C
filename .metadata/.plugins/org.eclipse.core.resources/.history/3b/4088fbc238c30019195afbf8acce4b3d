#include  <avr/io.h>
#include <util/delay.h>
#include  <math.h>
#define F_CPU 1000000

int main(void) {
	unsigned char i = 0;
	unsigned char arr[8] = { 8,12,4,6,2,3,1,9 };
	DDRC |= 0x0F;
	PORTC &= 0xF0;

	while (1) {
		PORTC=(arr[i%8] & 0x0F) | (PORTC &0x0F);
		i++;
		_delay_ms(500);
	}
	return 0;
}

