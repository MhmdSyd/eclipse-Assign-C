#include  <avr/io.h>
#include <util/delay.h>
#include  <math.h>
#define F_CPU 1000000

int main(void) {
	unsigned char i = 1;
	unsigned char arr[8] = { 8,12,4,6,2,3,1,9 };
	DDRA &= ~(1 << PA0);
	DDRA &= ~(1 << PA1);
	DDRC |= 0x0F;
	PORTC &= 0xFC;

	while (1) {
		if ((PINA & (1 << PA0))) {
			_delay_ms(30);
			if (PINA & (1 << PA0)) {

				PORTC = arr[i++%8];
			}
			while (PINA & (1 << PA0));
		}

	}
	return 0;
}

