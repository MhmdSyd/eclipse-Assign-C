#include<stdio.h>
int main()
{
    int i,j,n,z;
    printf("Enter any number : ");
    scanf("%d",&n);

    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
        	z = (n-(i+1));
            if(i==j || j==z)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
        printf("\n");
    }
    return 0;
}
