#include  <avr/io.h>
#include <util/delay.h>

#define F_CPU 1000000

int main(void)
{
	unsigned char i=1;
	unsigned char arr[4] ={12,6,3,9};
	DDRA &=~(1<<PA0);
	DDRC |=0x0F;
	PORTC &=0xFC;

	while(1)
	{
		if((PINA & (1<<PA0)) )
		{
			_delay_ms(30);
			if(PINA & (1<<PA0))
			{
				PORTC = arr[i];
				i =(i+1)%4;
			}
			while(PINA & (1<<PA0));
		}
	}
	return 0;
}

