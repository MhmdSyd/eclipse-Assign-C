#include  <avr/io.h>
#include  <util/delay.h>

int main(void)
{
	int i=0;
	DDRB =0x00;
	DDRC =0x0F;
	PORTC=0x00;
	while(1)
	{
		if(PINB&(1<<0))
		{
			PORTC |=(1<<0);
		}else
		{
			PORTC &=~(1<<1);
		}
		if(PINB&(1<<1))
		{
			PORTC |=(1<<1);
		}else
		{
			PORTC &=~(1<<1);
		}

	}
	return 0;
}

