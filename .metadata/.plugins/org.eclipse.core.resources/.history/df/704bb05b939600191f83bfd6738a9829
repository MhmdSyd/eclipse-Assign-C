#include <stdio.h>
#include <stdlib.h>

int main(void) {

	int n , i , j , z ;
	scanf("%d",&n);
	for(j=0;j<n;j++)
	{
		for(i=0;i<n;i++)
		{
			z=(n)-(i+1);
			if(i==j)
			{
				printf("*");

			}else if( j==z)
			{
				printf("*");
			}


			else
			{
				printf(" ");
			}

		printf("\n");
	}

	return 0;
}

}
