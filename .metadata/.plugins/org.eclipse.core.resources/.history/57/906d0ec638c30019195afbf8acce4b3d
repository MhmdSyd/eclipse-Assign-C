#include  <avr/io.h>
#include <util/delay.h>
#include  <math.h>


int main(void) {
	unsigned char count = 0;
	unsigned char arr[8] = { 8,12,4,6,2,3,1,9 };
	DDRC |= 0x0F;
	PORTC &= 0xF0;

	while (1) {
		PORTC=(arr[count] & 0x0F) | (PORTC &0xF0);
		i++;
		_delay_ms(500);
		if(count == 8)
			count=0;
	}
	return 0;
}

