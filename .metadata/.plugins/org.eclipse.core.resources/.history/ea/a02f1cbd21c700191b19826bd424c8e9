#include  <avr/io.h>
#include  <avr/interrupt.h>
#include  <util/delay.h>

void Timer1_init(void);
int main(void){
	DDRC |=(1<<PC0);
	PORTC &=~(1<<PC0);

	while(1){

	}

	return 0;
}

void Timer1_init(void){
	TCCR1A |=(1<<FOC1A);
	TCNT1 =0;
	OCR1A =1000;
	TCCR1B |=(1<<WGM12) | (1<<CS12) | (1<<CS10);
	TIMSK |=(1<<OCIE1A);
	SREG |=(1<<7);
}

ISR(TIMER1_COMPA_vect){
	PORTC ^=(1<<PC0);
}
